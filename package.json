{
  "name": "release-wizard",
  "version": "0.0.0",
  "private": true,
  "description": "Create a Github release with parsed commits into a given Markdown template",
  "main": "lib/index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/darioblanco/release-wizard.git"
  },
  "keywords": [
    "actions",
    "node",
    "setup",
    "release"
  ],
  "author": "Dario Blanco <dblancoit@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.10.0",
    "@actions/github": "^5.1.1",
    "@octokit/types": "^9.0.0",
    "semver": "^7.3.8"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.4.2",
    "@commitlint/config-conventional": "^17.4.2",
    "@types/eslint-plugin-prettier": "^3.1.0",
    "@types/jest": "^29.4.0",
    "@types/node": "^18.17.5",
    "@types/prettier": "2.7.2",
    "@types/semver": "^7.3.13",
    "@typescript-eslint/eslint-plugin": "^5.49.0",
    "@typescript-eslint/parser": "^5.49.0",
    "@vercel/ncc": "^0.36.1",
    "eslint": "^8.32.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-import-resolver-node": "^0.3.7",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jest": "^27.2.1",
    "eslint-plugin-node": "^11.1.0",
    "husky": "^8.0.3",
    "is-ci": "^3.0.1",
    "jest": "^29.4.1",
    "jest-config": "^29.4.1",
    "jest-environment-node": "^29.4.1",
    "prettier": "^2.8.3",
    "ts-jest": "^29.0.5",
    "ts-loader": "^9.4.2",
    "tsconfig-paths-webpack-plugin": "^4.0.0",
    "typescript": "^4.9.4"
  },
  "scripts": {
    "all": "npm run build && npm run format && npm run lint && npm run package && npm test",
    "build": "tsc -p tsconfig.build.json",
    "lint": "eslint --ext .ts,.tsx,.js,.jsx",
    "lint:commit": "commitlint -x @commitlint/config-conventional --edit",
    "format": "prettier --write --ignore-unknown .",
    "format:check": "prettier --check --ignore-unknown .",
    "package": "ncc build --source-map --license licenses.txt",
    "prepare": "is-ci || husky install",
    "test": "jest --coverage"
  },
  "lint-staged": {
    "*": "npm run format",
    "*.{js,jsx,ts,tsx}": "eslint --fix"
  }
}
