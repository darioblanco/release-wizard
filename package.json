{
  "name": "release-wizard",
  "version": "0.0.0",
  "private": true,
  "description": "Create a Github release with parsed commits into a given Markdown template",
  "main": "lib/main.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/darioblanco/release-wizard.git"
  },
  "keywords": [
    "actions",
    "node",
    "setup",
    "release"
  ],
  "author": "Dario Blanco <dblancoit@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.9.1",
    "@actions/github": "^5.0.3",
    "@octokit/types": "^6.41.0",
    "semver": "^7.3.7"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "@types/eslint-plugin-prettier": "^3.1.0",
    "@types/jest": "^28.1.6",
    "@types/node": "^18.6.5",
    "@types/prettier": "2.7.0",
    "@types/semver": "^7.3.12",
    "@typescript-eslint/eslint-plugin": "^5.33.0",
    "@typescript-eslint/parser": "^5.33.0",
    "@vercel/ncc": "^0.34.0",
    "eslint": "^8.21.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-node": "^0.3.6",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^26.8.2",
    "eslint-plugin-node": "^11.1.0",
    "husky": "^8.0.1",
    "is-ci": "^3.0.1",
    "jest": "^28.1.3",
    "jest-config": "^28.1.3",
    "jest-environment-node": "^28.1.3",
    "prettier": "^2.7.1",
    "ts-jest": "^28.0.7",
    "ts-loader": "^9.3.1",
    "tsconfig-paths-webpack-plugin": "^4.0.0",
    "typescript": "^4.7.4"
  },
  "scripts": {
    "all": "npm run build && npm run format && npm run lint && npm run package && npm test",
    "build": "tsc -p tsconfig.build.json",
    "lint": "eslint --ext .ts,.tsx,.js,.jsx",
    "lint:commit": "commitlint -x @commitlint/config-conventional --edit",
    "format": "prettier --write --ignore-unknown .",
    "format:check": "prettier --check --ignore-unknown .",
    "package": "ncc build --source-map --license licenses.txt",
    "prepare": "is-ci || husky install",
    "test": "jest --coverage"
  },
  "lint-staged": {
    "*": "npm run format",
    "*.{js,jsx,ts,tsx}": "eslint --fix"
  }
}
