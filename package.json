{
  "name": "release-wizard",
  "version": "0.0.0",
  "private": true,
  "description": "Create a Github release with parsed commits into a given Markdown template",
  "main": "lib/index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/darioblanco/release-wizard.git"
  },
  "keywords": [
    "actions",
    "node",
    "setup",
    "release"
  ],
  "author": "Dario Blanco <dblancoit@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.10.0",
    "@actions/github": "^5.1.1",
    "@octokit/types": "^11.1.0",
    "semver": "^7.6.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.7.1",
    "@commitlint/config-conventional": "^17.7.0",
    "@types/eslint-plugin-prettier": "^3.1.3",
    "@types/jest": "^29.5.4",
    "@types/node": "^20.5.9",
    "@types/prettier": "3.0.0",
    "@types/semver": "^7.5.8",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vercel/ncc": "^0.38.2",
    "eslint": "^8.48.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-import-resolver-node": "^0.3.9",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-jest": "^27.2.3",
    "eslint-plugin-n": "^14.0.0",
    "husky": "^8.0.3",
    "is-ci": "^3.0.1",
    "jest": "^29.6.4",
    "jest-config": "^29.6.4",
    "jest-environment-node": "^29.6.4",
    "prettier": "^3.3.3",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.4.4",
    "tsconfig-paths-webpack-plugin": "^4.1.0",
    "typescript": "^5.6.3"
  },
  "scripts": {
    "all": "npm run build && npm run format && npm run lint && npm run package && npm test",
    "build": "tsc -p tsconfig.build.json",
    "lint": "eslint --ext .ts,.tsx,.js,.jsx",
    "lint:commit": "commitlint -x @commitlint/config-conventional --edit",
    "format": "prettier --write --ignore-unknown .",
    "format:check": "prettier --check --ignore-unknown .",
    "package": "ncc build --source-map --license licenses.txt",
    "prepare": "is-ci || husky install",
    "test": "jest --coverage"
  },
  "lint-staged": {
    "*": "npm run format",
    "*.{js,jsx,ts,tsx}": "eslint --fix"
  }
}
